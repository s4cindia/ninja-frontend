{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(pwd)",
      "Bash(ls)",
      "Bash(git status)",
      "Bash(git branch)",
      "Bash(git log)",
      "Bash(git diff)",
      "Bash(npm test)",
      "Bash(npm run)",
      "Bash(npx tsc)",
      "Bash(node -v)",
      "Bash(npm -v)",
      "Bash(cat package.json)",
      "Bash(which)",
      "Bash(echo)",
      "Bash(find)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/branch-protection.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/branch-protection.sh"
          },
          {
            "type": "command",
            "command": "node -e \"const d=JSON.parse(require('fs').readFileSync(0,'utf8')); const f=d.tool_input?.file_path||''; if(f.startsWith('/tmp/')||f.startsWith('/home/')) { console.error('âŒ Error: Use Windows paths (C:\\\\\\\\Users\\\\\\\\...), not Linux paths (/tmp/, /home/)'); process.exit(2); }\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && echo 'ğŸ” Running TypeScript check...' && npx tsc --noEmit 2>&1 | head -20 || true"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && echo 'ğŸ” Running lint check...' && npm run lint 2>&1 | head -20 || true"
          }
        ]
      }
    ]
  }
}
